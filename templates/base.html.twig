<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta charset="utf-8">
        <link rel="shortcut icon" type="image/x-icon" href="{{ asset('assets/logo.png') }}" />
        <title>{% block title %} {% endblock %}</title>

        <link href="{{ asset('https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css') }}" rel="stylesheet">
        <link href="{{ asset('assets/css/style.css') }}" rel="stylesheet">
    </head>
    <body>
        <header >
            <nav class="navbar navbar-expand-lg" style="min-height: 9vh">
                <div class="nav-logo-left col-3">
                    <a class="navbar-brand pl-2" href="{{ path('app_home') }}">
                        NOM DU SITE
                    </a>
                </div>
                <button class="navbar-toggler navbar-button-burger" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler text-white">&#9776;</span>
                </button>
                <div class="collapse navbar-collapse custom-collapse col-lg-9" id="navbarSupportedContent">
                    {% if  app.user %}
                    <ul class="navbar-nav mr-auto text-center w-100">
                        <li class="nav-item px-4 col-lg-3 text-center">
                            <a class="nav-link" href="#">Menu1</a>
                        </li>
                        <li class="nav-item col-lg-3 text-center">
                            <a class="nav-link" href="#">Menu2</a>
                        </li>
                        <li class="nav-item col-lg-3 text-center">
                            <a class="nav-link" href="#">Menu3</a>
                        </li>
                        <li class="nav-item px-4 col-lg-3 text-center">
                            <a class="nav-link" href="{{ path('app_logout') }}">Deconnexion</a>
                        </li>
                    </ul>
                    {% endif %}
                    {% if not app.user %}
                        <ul class="navbar-nav mr-auto text-right w-100">
                            <li class="nav-item px-4 col-lg-10 text-right">
                                <a class="nav-link" href="{{ path('app_register') }}">Inscription</a>
                            </li>
                            <li class="nav-item px-4 col-lg-2 text-right">
                                <a class="nav-link" href="{{ path('app_login') }}">Connexion</a>
                            </li>
                        </ul>
                    {% endif %}
                </div>
            </nav>
        </header>
        <main style="min-height: 85vh" class="px-5 py-2 w-100 row">
        {% block body %}

        {% endblock %}
        </main>
        <footer style="min-height: 6vh" class="px-5 align-items-center">
            <section class="row pt-2 ">
                <div class="col-6"><p>&copy; 2023 Entreprise, Sales and Services &middot; <a href="#">Privacy</a> &middot; <a href="#">Terms</a></p></div>
                {#{% if is_granted('ROLE_ADMIN') %}
                    <div class="col-6 text-right"><a href="{{ path('app_register') }}">Rajouter un compte utilisateur</a></div>
                {% endif %}#}
            </section>
        </footer>
        <script src="{{ asset('https://code.jquery.com/jquery-3.2.1.slim.min.js') }}" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
        <script src="{{ asset('https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js') }}" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
        <script src="{{ asset('https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js') }}" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    </body>
</html>
